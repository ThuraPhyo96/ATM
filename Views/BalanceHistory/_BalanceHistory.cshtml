@using ATM.Helpers

<div class="row">
    <div class="col-sm-12 col-md-12 col-lg-12">
        <div>
            <table id="balanceHistoryTable" class="table table-striped table-bordered" style="width:100%">
                <thead>
                    <tr>
                        <th>Transaction Date</th>
                        <th>Transaction Type</th>
                        <th>Amount</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.TransactionDate.ToString("dd-MMM-yyyy")</td>
                            <td>@Html.Raw(BalanceHistoryHelper.GetCardActionType(item.HistoryType))</td>
                            <td class="text-right">@Html.Raw(BalanceHistoryHelper.GetBalanceAmount(item.Amount, item.HistoryType))</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>