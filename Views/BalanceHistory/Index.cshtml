@model List<ATM.AppServices.BalanceHistorySetup.Dtos.BalanceHistoryDto>
@using ATM.Helpers

@{
    ViewData["Title"] = "History(s)";
    string backUrl = (ViewBag.BackUrl ?? Url.Action("Index", "Home")) as string;
}

<div class="row">
    <div class="col-2">
        <a href="@backUrl" class="btn btn-primary">Back</a>
    </div>
    <div class="col-10">
        <div class="text-center"> <h3>@ViewData["Title"]</h3></div>
    </div>
</div>

<div class="row">
    <div class="col-sm-12 col-md-12 col-lg-12">
        <div>
            <table id="balanceHistoryTable" class="table table-striped table-bordered" style="width:100%">
                <thead>
                    <tr>
                        <th>Transaction Date</th>
                        <th>Transaction Type</th>
                        <th>Account</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.TransactionDate.ToString("dd-MMM-yyyy")</td>
                            <td>@Html.Raw(BalanceHistoryHelper.GetCardActionType(item.HistoryType))</td>
                            <td class="text-right">@Html.Raw(BalanceHistoryHelper.GetBalanceAmount(item.Amount, item.HistoryType))</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@section Scripts {
    <script type="text/javascript">
        $('#balanceHistoryTable').DataTable({
            order: [[0, 'asc']]
        });
    </script>
}