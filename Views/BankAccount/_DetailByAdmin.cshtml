@model ATM.AppServices.BankAccountSetup.Dtos.BankAccountDto

<form asp-action="Edit" asp-controller="BankAccount" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <input type="hidden" asp-for="BankAccountId">
    <input type="hidden" asp-for="BankAccountGuid">

    <div class="form-group">
        <div class="row">
            <div class="col-4 col-md-4 col-sm-12">
                <label asp-for="@Model.Customer.CustomerGuid" class="control-label"></label>
            </div>
            <div class="col-8 col-md-8 col-sm-12">
                <select asp-for="@Model.Customer.CustomerGuid" class="select2 form-control" asp-items="@ViewBag.Customers" style="width: 100%" disabled>
                    <option value="">Select customer type</option>
                </select>
            </div>
        </div>
    </div>

    <div class="form-group">
        <div class="row">
            <div class="col-4 col-md-4 col-sm-12">
                <label asp-for="AccountNumber" class="control-label"></label>
            </div>
            <div class="col-8 col-md-8 col-sm-12">
                <input asp-for="AccountNumber" class="form-control" readonly />
            </div>
        </div>
    </div>

    <div class="form-group">
        <div class="row">
            <div class="col-4 col-md-4 col-sm-12">
                <label asp-for="AccountType" class="control-label"></label>
            </div>
            <div class="col-8 col-md-8 col-sm-12">
                <select asp-for="AccountType" class="select2 form-control" asp-items="@ViewBag.AccountTypes" style="width: 100%" disabled>
                    <option value="">Select account type</option>
                </select>
            </div>
        </div>
    </div>

    <div class="form-group">
        <div class="row">
            <div class="col-4 col-md-4 col-sm-12">
                <label asp-for="Balance" class="control-label"></label>
                <a href="#" onclick="updateBalance('@Model.BankAccountGuid.ToString()')" title="Update Balance" style="color: #3399ff">
                    <i class="fa fa-pencil-square fa-lg"></i>
                </a>
            </div>
            <div class="col-8 col-md-8 col-sm-12">
                <input asp-for="Balance" class="form-control" readonly />
            </div>
        </div>
    </div>

    <div class="form-group">
        <div class="row">
            <div class="col-4 col-md-4 col-sm-12">
                <label asp-for="IsActive" class="control-label"></label>
            </div>
            <div class="col-8 col-md-8 col-sm-12">
                <input asp-for="IsActive" />
            </div>
        </div>
    </div>

    <div class="form-group">
        <div class="row">
            <div class="col-4 col-md-4 col-sm-12">
                <label asp-for="Remark" class="control-label"></label>
            </div>
            <div class="col-8 col-md-8 col-sm-12">
                <textarea asp-for="Remark" class="form-control" rows="3"></textarea>
            </div>
        </div>
    </div>

    <div class="form-group">
        <div class="row">
            <div class="col-4 col-md-4 col-sm-12">
            </div>
            <div class="col-8 col-md-8 col-sm-12">
                <input type="submit" value="Update" class="btn btn-primary" />
            </div>
        </div>
    </div>
</form>