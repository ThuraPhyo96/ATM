@model ATM.AppServices.BankCardSetup.Dtos.CreateBankCardDto
@{
    Layout = null;
    ViewData["Title"] = "Create Bank Card";
}

<div class="modal-header">
    <h5 class="modal-title" id="createBankCard">@ViewData["Title"]</h5>
    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">&times;</span>
    </button>
</div>
<div class="modal-body">
    <form asp-action="CreateBankCard" asp-controller="BankCard" method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="CustomerId" />
        <input type="hidden" asp-for="BankAccountId" />
        <input type="hidden" asp-for="BankAccountGuid" />

        <div class="form-group">
            <div class="row">
                <div class="col-4 col-md-4 col-sm-12">
                    <label asp-for="CustomerId" class="control-label">Customer Name</label>
                </div>
                <div class="col-8 col-md-8 col-sm-12">
                    @Model.Customer.FirstName
                </div>
            </div>
        </div>

        <div class="form-group">
            <div class="row">
                <div class="col-4 col-md-4 col-sm-12">
                    <label asp-for="BankAccountId" class="control-label"></label>
                </div>
                <div class="col-8 col-md-8 col-sm-12">
                    @Model.BankAccount.AccountNumber
                </div>
            </div>
        </div>

        <div class="form-group">
            <div class="row">
                <div class="col-4 col-md-4 col-sm-12">
                    <label asp-for="BankCardNumber" class="control-label"></label>
                </div>
                <div class="col-8 col-md-8 col-sm-12">
                    <input asp-for="BankCardNumber" class="form-control" />
                    <span asp-validation-for="BankCardNumber" class="text-danger"></span>
                </div>
            </div>
        </div>

        <div class="form-group">
            <div class="row">
                <div class="col-4 col-md-4 col-sm-12">
                    <label asp-for="PIN" class="control-label"></label>
                </div>
                <div class="col-8 col-md-8 col-sm-12">
                    <input type="password" asp-for="PIN" class="form-control" />
                    <span asp-validation-for="PIN" class="text-danger"></span>
                </div>
            </div>
        </div>

        <div class="form-group">
            <div class="row">
                <div class="col-4 col-md-4 col-sm-12">
                    <label asp-for="ValidDate" class="control-label"></label>
                </div>
                <div class="col-8 col-md-8 col-sm-12">
                    <input asp-for="ValidDate" class="form-control" />
                    <span asp-validation-for="ValidDate" class="text-danger"></span>
                </div>
            </div>
        </div>

        <div class="form-group">
            <div class="row">
                <div class="col-4 col-md-4 col-sm-12">
                    <label asp-for="Remark" class="control-label"></label>
                </div>
                <div class="col-8 col-md-8 col-sm-12">
                    <textarea asp-for="Remark" class="form-control" rows="3"></textarea>
                </div>
            </div>
        </div>

        <div class="form-group">
            <div class="row">
                <div class="col-12 col-md-12 col-sm-12 text-right">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    <input type="submit" value="Create" class="btn btn-primary" />
                </div>
            </div>
        </div>
    </form>
</div>

<script>
    $('.select2').select2({
        dropdownParent: $('#createBankCard'),
        placeholder: 'Select an option',
        allowClear: true,
        width: 'resolve'
    });
</script>