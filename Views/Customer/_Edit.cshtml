@model ATM.AppServices.CustomerSetup.Dtos.CustomerDto

<div class="card" style="margin-top:15px;">
    <div class="card-body">
        <div class="row">
            <div class="col-md-8">
                <form asp-action="Edit" asp-controller="Customer" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="CustomerId">
                    <input type="hidden" asp-for="CustomerGuid">

                    <div class="form-group">
                        <div class="row">
                            <div class="col-4 col-md-4 col-sm-12">
                                <label asp-for="FirstName" class="control-label"></label>
                            </div>
                            <div class="col-8 col-md-8 col-sm-12">
                                <input asp-for="FirstName" class="form-control" />
                                <span asp-validation-for="FirstName" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="row">
                            <div class="col-4 col-md-4 col-sm-12">
                                <label asp-for="DateOfBirth" class="control-label"></label>
                            </div>
                            <div class="col-8 col-md-8 col-sm-12">
                                <input asp-for="DateOfBirth" class="form-control" />
                                <span asp-validation-for="DateOfBirth" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="row">
                            <div class="col-4 col-md-4 col-sm-12">
                                <label asp-for="NRIC" class="control-label"></label>
                            </div>
                            <div class="col-8 col-md-8 col-sm-12">
                                <input asp-for="NRIC" class="form-control" />
                                <span asp-validation-for="NRIC" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="row">
                            <div class="col-4 col-md-4 col-sm-12">
                                <label asp-for="FatherName" class="control-label"></label>
                            </div>
                            <div class="col-8 col-md-8 col-sm-12">
                                <input asp-for="FatherName" class="form-control" />
                                <span asp-validation-for="FatherName" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="row">
                            <div class="col-4 col-md-4 col-sm-12">
                                <label asp-for="MobileNumber" class="control-label"></label>
                            </div>
                            <div class="col-8 col-md-8 col-sm-12">
                                <input asp-for="MobileNumber" class="form-control" />
                                <span asp-validation-for="MobileNumber" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="row">
                            <div class="col-4 col-md-4 col-sm-12">
                                <label asp-for="Email" class="control-label"></label>
                            </div>
                            <div class="col-8 col-md-8 col-sm-12">
                                <input asp-for="Email" class="form-control" />
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="row">
                            <div class="col-4 col-md-4 col-sm-12">
                                <label asp-for="JobTitle" class="control-label"></label>
                            </div>
                            <div class="col-8 col-md-8 col-sm-12">
                                <input asp-for="JobTitle" class="form-control" />
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-4 col-md-4 col-sm-12">
                            <label asp-for="Address" class="control-label"></label>
                        </div>
                        <div class="col-8 col-md-8 col-sm-12">
                            <input asp-for="Address" class="form-control" />
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-4 col-md-4 col-sm-12">
                            <label asp-for="IsActive" class="control-label"></label>
                        </div>
                        <div class="col-8 col-md-8 col-sm-12">
                            <input asp-for="IsActive" />
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-4 col-md-4 col-sm-12">
                            <label asp-for="Remark" class="control-label"></label>
                        </div>
                        <div class="col-8 col-md-8 col-sm-12">
                            <textarea asp-for="Remark" class="form-control"></textarea>
                        </div>
                    </div>

                    <div class="form-group">
                        <input type="submit" value="Update" class="btn btn-primary" />
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>