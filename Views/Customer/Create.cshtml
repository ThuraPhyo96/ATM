@model ATM.AppServices.CustomerSetup.Dtos.CreateCustomerDto

@{
    ViewData["Title"] = "Create Customer";
}

<h1>@ViewData["Title"]</h1>


<div class="row">
    <div class="col-2">
        <a asp-action="Index" asp-controller="Customer" class="btn btn-primary">Back</a>
    </div>
    <div class="col-10">
        <div class="text-center"> <h3>@ViewData["Title"]</h3></div>
    </div>
</div>


<div class="row">
    <div class="col-md-8">
        <form asp-action="Create" asp-controller="Customer" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <div class="row">
                    <div class="col-4 col-md-4 col-sm-12">
                        <label asp-for="FirstName" class="control-label"></label>
                    </div>
                    <div class="col-8 col-md-8 col-sm-12">
                        <input asp-for="FirstName" class="form-control" />
                        <span asp-validation-for="FirstName" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="form-group">
                <div class="row">
                    <div class="col-4 col-md-4 col-sm-12">
                        <label asp-for="DateOfBirth" class="control-label"></label>
                    </div>
                    <div class="col-8 col-md-8 col-sm-12">
                        <input asp-for="DateOfBirth" class="form-control" />
                        <span asp-validation-for="DateOfBirth" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="row">
                    <div class="col-4 col-md-4 col-sm-12">
                        <label asp-for="NRIC" class="control-label"></label>
                    </div>
                    <div class="col-8 col-md-8 col-sm-12">
                        <input asp-for="NRIC" class="form-control" />
                        <span asp-validation-for="NRIC" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="row">
                    <div class="col-4 col-md-4 col-sm-12">
                        <label asp-for="FatherName" class="control-label"></label>
                    </div>
                    <div class="col-8 col-md-8 col-sm-12">
                        <input asp-for="FatherName" class="form-control" />
                        <span asp-validation-for="FatherName" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="row">
                    <div class="col-4 col-md-4 col-sm-12">
                        <label asp-for="MobileNumber" class="control-label"></label>
                    </div>
                    <div class="col-8 col-md-8 col-sm-12">
                        <input asp-for="MobileNumber" class="form-control" />
                        <span asp-validation-for="MobileNumber" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="row">
                    <div class="col-4 col-md-4 col-sm-12">
                        <label asp-for="Email" class="control-label"></label>
                    </div>
                    <div class="col-8 col-md-8 col-sm-12">
                        <input asp-for="Email" class="form-control" />
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="row">
                    <div class="col-4 col-md-4 col-sm-12">
                        <label asp-for="JobTitle" class="control-label"></label>
                    </div>
                    <div class="col-8 col-md-8 col-sm-12">
                        <input asp-for="JobTitle" class="form-control" />
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="row">
                    <div class="col-4 col-md-4 col-sm-12">
                        <label asp-for="Address" class="control-label"></label>
                    </div>
                    <div class="col-8 col-md-8 col-sm-12">
                        <input asp-for="Address" class="form-control" />
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="row">
                    <div class="col-4 col-md-4 col-sm-12">
                        <label asp-for="Remark" class="control-label"></label>
                    </div>
                    <div class="col-8 col-md-8 col-sm-12">
                        <textarea asp-for="Remark" class="form-control"></textarea>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}