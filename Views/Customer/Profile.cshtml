@using ATM.Helpers
@model ATM.AppServices.CustomerSetup.Dtos.CustomerDto

@{
    ViewData["Title"] = "Profile";
    string statusMessage = (TempData[SMessage.SuccessMessage] ?? string.Empty) as string;
}

<div class="row">
    <div class="col-12">
        <div class="text-center"> <h3>@ViewData["Title"]</h3></div>
    </div>
</div>

<p>
    @if (!string.IsNullOrEmpty(statusMessage))
    {
        @await Html.PartialAsync(SPartialViews.ActionAlert, statusMessage)
    }
</p>

<div class="row">
    <div class="col-md-8">
        <form>
            <div class="form-group">
                <div class="row">
                    <div class="col-4 col-md-4 col-sm-12">
                        <label asp-for="FirstName" class="control-label"></label>
                    </div>
                    <div class="col-8 col-md-8 col-sm-12">
                        @Model.FirstName
                    </div>
                </div>
            </div>

            <div class="form-group">
                <div class="row">
                    <div class="col-4 col-md-4 col-sm-12">
                        <label asp-for="DateOfBirth" class="control-label"></label>
                    </div>
                    <div class="col-8 col-md-8 col-sm-12">
                        @Model.DateOfBirth.ToString("dd-MMM-yyyy")
                    </div>
                </div>
            </div>

            <div class="form-group">
                <div class="row">
                    <div class="col-4 col-md-4 col-sm-12">
                        <label asp-for="NRIC" class="control-label"></label>
                    </div>
                    <div class="col-8 col-md-8 col-sm-12">
                        @Model.NRIC
                    </div>
                </div>
            </div>

            <div class="form-group">
                <div class="row">
                    <div class="col-4 col-md-4 col-sm-12">
                        <label asp-for="FatherName" class="control-label"></label>
                    </div>
                    <div class="col-8 col-md-8 col-sm-12">
                        @(Model.FatherName ?? string.Empty)
                    </div>
                </div>
            </div>

            <div class="form-group">
                <div class="row">
                    <div class="col-4 col-md-4 col-sm-12">
                        <label asp-for="MobileNumber" class="control-label"></label>
                    </div>
                    <div class="col-8 col-md-8 col-sm-12">
                        @Model.MobileNumber
                    </div>
                </div>
            </div>

            <div class="form-group">
                <div class="row">
                    <div class="col-4 col-md-4 col-sm-12">
                        <label asp-for="Email" class="control-label"></label>
                    </div>
                    <div class="col-8 col-md-8 col-sm-12">
                        @Model.Email
                    </div>
                </div>
            </div>

            <div class="form-group">
                <div class="row">
                    <div class="col-4 col-md-4 col-sm-12">
                        <label asp-for="JobTitle" class="control-label"></label>
                    </div>
                    <div class="col-8 col-md-8 col-sm-12">
                        @(Model.JobTitle ?? string.Empty)
                    </div>
                </div>
            </div>

            <div class="form-group">
                <div class="row">
                    <div class="col-4 col-md-4 col-sm-12">
                        <label asp-for="Address" class="control-label"></label>
                    </div>
                    <div class="col-8 col-md-8 col-sm-12">
                        @(Model.Address ?? string.Empty)
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}